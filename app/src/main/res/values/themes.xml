<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaterialDesign" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/themeColorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="themeColorPrimary">@color/purple_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="IndigoTheme" parent="Theme.MaterialDesign">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">@color/indigo_500</item>
        <item name="colorAccent">@color/indigo_200</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_500</item>
        <item name="textColorConnected">@color/green_400</item>
        <item name="textColorDisConnected">@color/gray_200</item>
        <item name="themeColorPrimary">@color/indigo_300</item>
    </style>

    <style name="PinkTheme" parent="Theme.MaterialDesign">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">@color/pink_500</item>
        <item name="colorAccent">@color/pink_200</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_500</item>
        <item name="textColorConnected">@color/green_400</item>
        <item name="textColorDisConnected">@color/gray_200</item>
        <item name="themeColorPrimary">@color/pink_300</item>

    </style>

    <style name="ChipStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="selectionRequired">true</item>
        <item name="singleLine">true</item>
        <item name="singleSelection">true</item>
    </style>
</resources>